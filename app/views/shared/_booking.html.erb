<div class="container calendar">
  <%= simple_form_for [@service, @booking] do |f| %>
    <%= f.input :start_date, type: "date", placeholder: "fecha de inicio", html5: true %>
    <%= f.input :end_date, type: "date", placeholder:  "fecha de fin", html5: true %>
    <% if user_signed_in? %>
      <%= f.button :submit, class:"bn5" %>
    <% else %>
      <%= link_to "Create account", new_user_session_path, class:"bn5" %>
    <% end %>
  <% end %>
</div>
