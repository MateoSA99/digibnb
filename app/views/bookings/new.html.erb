<div class="contain-img">
  <h1 class="my-5">Reserve the Product</h1>

  <div class="container m-5 d-flex justify-content-center">
    <div class="card-show">
      <div class="cover-card">
        <%= cl_image_tag @service.photo.key, class: "card-img-top " %>
      </div>
      <h2> <%= link_to  @service.product_name, service_path(@service), class:"card-title" %> </h2>
      <p> <%= @service.description %> </p>
      <hr>
      <div class="footer-card">
        <p><%= @service.user.first_name %> <%= @service.user.last_name %></p>
        <h3 class="card-trip-pricing"><i class="fa-solid fa-dollar-sign"></i> <%= @service.price %></h3>
      </div>
    </div>
    <div class="p-4 card-show card-calendar d-flex justify-content-center align-items-center">
      <%= render 'shared/booking' %>
    </div>
  </div>
</div>
