<div class="contain-img">
  <div class="container d-flex justify-content-center my-5">
    <div class="card-show">
      <div class="cover-card">
        <%= cl_image_tag @booking.service.photo.key, class: "card-img-top " %>
      </div>
      <h2 class="mt-4"><%= @booking.service.product_name %></h2>    <p> <%= @booking.service.description %> </p>
      <hr>
      <div class="footer-card">
        <p>Fecha inicio: <%= @booking.start_date.strftime("%d/%m/%Y") %></p>
        <p>Fecha final: <%= @booking.end_date.strftime("%d/%m/%Y") %></p>
      </div>
    </div>
  </div>

  <%= link_to "Back to products", services_path, class:"bn5" %>
  <%= link_to "Delete", booking_path, class:"bn5", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this product?" } %>
  <%= link_to "Edit", edit_booking_path(@booking), class:"bn5" %>
</div>
